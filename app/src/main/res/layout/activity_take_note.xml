<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".take_note.TakeNoteActivity"
        android:orientation="vertical"
        android:id="@+id/root"
>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noteToolbar"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:titleTextColor="#ffffff"
            app:theme="@style/ToolbarColoredBackArrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    >

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tools"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp"

    >
        <Button
                android:id="@+id/deleteNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="delete"
                android:paddingLeft="10dp"
                android:textColor="#808080"
                android:drawableStart="@drawable/ic_baseline_delete_24px"
                android:background="#ffffff"
                android:layout_margin="10dp"
                android:drawableTint="#808080"
                android:layout_weight="1.2"
                android:shadowRadius="50"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
        />
        <Button
                android:id="@+id/saveNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="save"
                android:paddingLeft="60dp"
                android:drawableLeft="@drawable/ic_baseline_save_24px"
                android:background="#ffffff"
                android:layout_margin="5dp"
                android:drawableTint="#808080"
                android:textColor="#808080"
                android:layout_weight="2.75"
                android:shadowRadius="50"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"

        />

    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:ems="10"
            android:id="@+id/noteLabelInActivity"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:hint="Note Title"/>
    <EditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
            android:ems="10"
            android:gravity="start"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:id="@+id/noteTextInActivity"
            android:paddingLeft="10dp"
            android:background="@android:color/transparent"/>

</LinearLayout>